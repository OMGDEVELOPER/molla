{% doc %}
  @prompt
    block that renders html

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-html-renderer-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-html-renderer-{{ ai_gen_id }} * {
    max-width: 100%;
  }

  .ai-html-renderer-{{ ai_gen_id }} img {
    height: auto;
    border-radius: {{ block.settings.content_border_radius }}px;
  }

  .ai-html-renderer-{{ ai_gen_id }} h1,
  .ai-html-renderer-{{ ai_gen_id }} h2,
  .ai-html-renderer-{{ ai_gen_id }} h3,
  .ai-html-renderer-{{ ai_gen_id }} h4,
  .ai-html-renderer-{{ ai_gen_id }} h5,
  .ai-html-renderer-{{ ai_gen_id }} h6 {
    color: {{ block.settings.heading_color }};
    margin-top: 0;
    margin-bottom: 16px;
  }

  .ai-html-renderer-{{ ai_gen_id }} p {
    margin-bottom: 16px;line-height: 1.6;
  }

  .ai-html-renderer-{{ ai_gen_id }} a {
    color: {{ block.settings.link_color }};
    text-decoration: underline;
  }

  .ai-html-renderer-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-html-renderer-{{ ai_gen_id }} ul,
  .ai-html-renderer-{{ ai_gen_id }} ol {
    margin-bottom: 16px;padding-left: 20px;
  }

  .ai-html-renderer-{{ ai_gen_id }} li {
    margin-bottom: 8px;
  }

  .ai-html-renderer-{{ ai_gen_id }} blockquote {
    margin: 16px 0;
    padding: 16px;
    border-left: 4px solid {{ block.settings.accent_color }};background-color: {{ block.settings.blockquote_bg_color }};font-style: italic;
  }

  .ai-html-renderer-{{ ai_gen_id }} code {
    background-color: {{ block.settings.code_bg_color }};
    padding: 2px 6px;
    border-radius: 4px;
    font-family: monospace;
    font-size: 0.9em;
  }

  .ai-html-renderer-{{ ai_gen_id }} pre {
    background-color: {{ block.settings.code_bg_color }};
    padding: 16px;
    border-radius: {{ block.settings.content_border_radius }}px;
    overflow-x: auto;
    margin-bottom: 16px;
  }

  .ai-html-renderer-{{ ai_gen_id }} pre code {
    background: none;
    padding: 0;
  }

  .ai-html-renderer-{{ ai_gen_id }} table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 16px;
  }

  .ai-html-renderer-{{ ai_gen_id }} th,
  .ai-html-renderer-{{ ai_gen_id }} td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid {{ block.settings.border_color }};
  }

  .ai-html-renderer-{{ ai_gen_id }} th {
    background-color: {{ block.settings.table_header_bg }};
    font-weight: bold;}

  @media screen and (max-width: 749px) {
    .ai-html-renderer-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-html-renderer-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.custom_html != blank %}
    {{ block.settings.custom_html }}
  {% else %}
    <div style="text-align: center; padding: 40px; color: #999;">
      <p>Add your HTML content in the block settings</p>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "HTML Renderer",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "html",
      "id": "custom_html",
      "label": "HTML content",
      "default": "<h2>Sample HTML Content</h2><p>This is a paragraph with <strong>bold text</strong> and <em>italic text</em>.</p><ul><li>List item 1</li><li>List item 2</li><li>List item 3</li></ul>"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "padding",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Padding",
      "default": 20
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 0
    },
    {
      "type": "range",
      "id": "content_border_radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Content border radius",
      "default": 4
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#222222"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link color",
      "default": "#0066cc"
    },
    {
      "type": "color",
      "id": "link_hover_color",
      "label": "Link hover color",
      "default": "#004499"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent color",
      "default": "#0066cc"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border color",
      "default": "#e0e0e0"
    },
    {
      "type": "color",
      "id": "blockquote_bg_color",
      "label": "Blockquote background",
      "default": "#f8f9fa"
    },
    {
      "type": "color",
      "id": "code_bg_color",
      "label": "Code background",
      "default": "#f4f4f4"
    },
    {
      "type": "color",
      "id": "table_header_bg",
      "label": "Table header background",
      "default": "#f8f9fa"
    }
  ],
  "presets": [
    {
      "name": "HTML Renderer"
    }
  ],
  "tag": null
}
{% endschema %}