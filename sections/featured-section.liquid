{{ 'featured-section.css' | asset_url | stylesheet_tag }}

<section class="featured-section">
  <div class="container">
      <div class="row">
        <div class="item __item-1">
          <div class="__heading">
            <h2>Big Discounts</h2>
          </div>
          <div class="__text">
            <p>If you become one of our retailers</p>
          </div>
          <div class="cta">
            <a href="#"><button>BE OUR PARTNER</button></a>
          </div>
        </div>
        <div class="item __item-2">
          <div class="row">
            <div class="__item-2__group">
              {% comment %} group 1 {% endcomment %}
              <div class="__group1">
                <div class="__heading">
                  <h2>Retail Weekend Sale!<br/>GET UP TO <span>50% OFF</span></h2>
                </div>
              </div>
              {% comment %} group 2 {% endcomment %}
              <div class="__group2">
                <div class="row">
                  <div class="group__item">
                    <h2>New Roofing Accessories</h2>
                    <p>Mega Collection</p>
                    <a href="#"><button>SHOW COLLECTIONS</button></a>
                  </div>
                  <div class="group__item">
                    <h2>New Roofing Accessories</h2>
                    <p>Mega Collection</p>
                    <a href="#"><button>SHOW COLLECTIONS</button></a>
                  </div>
                </div>
              </div>
              {% comment %} end of__group2 {% endcomment %}
            </div>
          </div>
        </div>
        {% comment %} end of row {% endcomment %}
      </div>
  </div>
</section>
