{%  style %}
  .about-grid {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 40px;
}

.about-section .quote-btn {
  display: inline-block;
  padding: 10px 15px;
  background-color: #007cba;
  color: white;
  text-decoration: none;
  border-radius: 4px;
}

{% endstyle %}
<section class="about-section container">
  <div class="about-grid">
    <div class="main-content">
      <h2>{{ section.settings.about_title }}</h2>
      <p>{{ section.settings.about_text }}</p>

      <h3>{{ section.settings.why_title }}</h3>
      <p>{{ section.settings.why_text }}</p>

      <h3>{{ section.settings.specialization_title }}</h3>
      <ul>
        {% for block in section.blocks %}
          {% if block.type == 'specialization' %}
            <li>{{ block.settings.text }}</li>
          {% endif %}
        {% endfor %}
      </ul>

      <h3>{{ section.settings.core_services_title }}</h3>
      <ul>
        {% for block in section.blocks %}
          {% if block.type == 'core_service' %}
            <li>{{ block.settings.text }}</li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>

    <div class="sidebar">
      <h3>{{ section.settings.contact_title }}</h3>
      <p><strong>Address:</strong><br>{{ section.settings.contact_address }}</p>
      <p><strong>Email:</strong><br><a href="mailto:{{ section.settings.contact_email }}">{{ section.settings.contact_email }}</a></p>
      <p><strong>Phone:</strong><br><a href="tel:{{ section.settings.contact_phone }}">{{ section.settings.contact_phone }}</a></p>
      <a href="{{ section.settings.button_link }}" class="quote-btn">{{ section.settings.button_text }}</a>
    </div>
  </div>
</section>

{% schema %}
