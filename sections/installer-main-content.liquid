{%  style %}
.about-section{
    padding: 48px 0px;
}

.about-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 40px;
}

.about-section .quote-btn {
    display: inline-block;
    padding: 10px 15px;
    background-color: #007cba;
    color: white;
    text-decoration: none;
    border-radius: 4px;
}

{% endstyle %}
<section class="about-section container">
  <div class="about-grid">
    <div class="main-content">
      {{ section.settings.main_content }}
    </div>

    <div class="sidebar">
      <h3>{{ section.settings.contact_title }}</h3>
 <ul>
                <li>
                     <img src="https://cdn.shopify.com/s/files/1/0936/3328/2419/files/location_on.png?v=1754363429">
                     <span>{{ item.address }}</span>
                </li>
                <li>
                     <img src="https://cdn.shopify.com/s/files/1/0936/3328/2419/files/mail.png?v=1754363429">
                     <span><a href="mailto:{{ item.email }}">{{ item.email }}</a></span>
                </li>
                <li>
                     <img src="https://cdn.shopify.com/s/files/1/0936/3328/2419/files/call.png?v=1754363436">
                     <span><a href="tel:{{ item.phone }}">{{ item.phone }}</a></span>
                </li>
            </ul>>
      <a href="{{ section.settings.button_link }}" class="quote-btn">{{ section.settings.button_text }}</a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Section",
  "tag": "section",
  "class": "about-section-wrapper",
  "settings": [
    {
      "type": "richtext",
      "id": "main_content",
      "label": "Main Content"
    },
    {
      "type": "text",
      "id": "specialization_title",
      "label": "Specialization Title",
      "default": "Specialization"
    },
    {
      "type": "text",
      "id": "core_services_title",
      "label": "Core Services Title",
      "default": "Core Services"
    },
    {
      "type": "text",
      "id": "contact_title",
      "label": "Contact Us Title",
      "default": "Contact Us"
    },
    {
      "type": "text",
      "id": "contact_address",
      "label": "Contact Address",
      "default": "60â€“68 Hampstead Road, Auburn, NSW 2144"
    },
    {
      "type": "text",
      "id": "contact_email",
      "label": "Contact Email",
      "default": "info@bighandsbuildingsupplies.com.au"
    },
    {
      "type": "text",
      "id": "contact_phone",
      "label": "Contact Phone",
      "default": "1300 242 799"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Request a Quote"
    }
  ],
  "blocks": [
    {
      "type": "specialization",
      "name": "Specialization Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    },
    {
      "type": "core_service",
      "name": "Core Service Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "About Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
