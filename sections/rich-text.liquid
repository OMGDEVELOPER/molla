<section class="rich-text-section">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="editor-content">
          {{ section.settings.content }}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Rich text",
  "settings": [
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>This is a rich text block. Add your content here.</p>"
    }
  ],
  "presets": [
    {
      "name": "Rich text"
    }
  ]
}
{% endschema %}
