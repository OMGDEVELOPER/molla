<!-- Popup Overlay -->
<div id="quote-popup" class="quote-popup">
  <div class="quote-popup-content">
    <span id="close-quote-popup" class="close-popup">&times;</span>
    <div class="container" data-block="item_contact_form">
      <div class="content_1566463547064" data-respon="{'el':'.content_1566463547064','mt':'','mb':'3rem','p':''}">
        <div class="section-width w-100">
          <div class="row justify-content-center text-center">
            <div class="col-md-12 col-lg-12">
              <h2 class="title mb-1">Get In Touch</h2>
              <p class="mb-2"></p>
              <p class="lead text-primary">
                We collaborate with ambitious brands and people; <br>
                we’d love to build something great together.
              </p>
              <form
                method="post"
                action="/contact#contact_form"
                id="contact_form"
                accept-charset="UTF-8"
                class="contact-form mb-3"
              >
                <input type="hidden" name="form_type" value="contact"><input type="hidden" name="utf8" value="✓">
                <div class="row">
                  <div class="col-6 col-md-4">
                    <label for="cname" class="sr-only">Name </label>
                    <input
                      type="text"
                      class="form-control"
                      id="cname"
                      name="contact[name]"
                      value=""
                      placeholder="Name *"
                      required=""
                    >
                  </div>

                  <div class="col-6 col-md-4">
                    <label for="cemail" class="sr-only">Email </label>
                    <input
                      type="email"
                      class="form-control"
                      id="cemail"
                      name="contact[email]"
                      placeholder="Email *"
                      required=""
                    >
                  </div>

                  <div class="col-12 col-md-4">
                    <label for="cphone" class="sr-only">Phone</label>
                    <input type="tel" class="form-control" id="cphone" name="contact[phone]" placeholder="Phone">
                  </div>
                </div>
                <label for="cmessage" class="sr-only">Subject</label>
                <textarea
                  class="form-control"
                  cols="30"
                  rows="4"
                  id="cmessage"
                  name="contact[body]"
                  required=""
                  placeholder="Subject *"
                ></textarea>

                <button type="submit" class="btn btn-outline-primary-2 btn-minwidth-sm">
                  <span>SUBMIT</span>
                  <i class="fkt-long-arrow-right"></i>
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Button */
  .get-quote-btn {
    background-color: #000;
    color: #fff;
    padding: 10px 18px;
    border: none;
    cursor: pointer;
    border-radius: 4px;
  }
  .get-quote-btn:hover {
    background-color: #333;
  }

  /* Popup */
  .quote-popup {
    display: none;
    position: fixed;
    z-index: 9999;
    left: 0; top: 0;
    width: 100%; height: 100%;
    background-color: rgba(0,0,0,0.6);
  }

  /* Popup Content */
  .quote-popup-content {
    background: #fff;
    margin: 10% auto;
    padding: 20px;
    width: 90%;
    max-width: 500px;
    position: relative;
    border-radius: 8px;
  }

  /* Close Button */
  .close-popup {
    position: absolute;
    top: 10px; right: 15px;
    font-size: 28px;
    cursor: pointer;
  }

  /* Form Styles */
  .quote-form label {
    display: block;
    margin-top: 12px;
    font-weight: 600;
  }
  .quote-form input,
  .quote-form textarea {
    width: 100%;
    padding: 10px;
    margin-top: 6px;
    border: 1px solid #ddd;
    border-radius: 4px;
  }
  .submit-quote-btn {
    background: #000;
    color: #fff;
    padding: 10px 18px;
    margin-top: 15px;
    border: none;
    cursor: pointer;
    border-radius: 4px;
  }
  .submit-quote-btn:hover {
    background: #333;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const quoteBtn = document.getElementById('get-quote-btn');
    const quotePopup = document.getElementById('quote-popup');
    const closePopup = document.getElementById('close-quote-popup');

    // Open popup
    quoteBtn.addEventListener('click', function () {
      quotePopup.style.display = 'block';
    });

    // Close popup
    closePopup.addEventListener('click', function () {
      quotePopup.style.display = 'none';
    });

    // Close on outside click
    window.addEventListener('click', function (event) {
      if (event.target == quotePopup) {
        quotePopup.style.display = 'none';
      }
    });
  });
</script>
