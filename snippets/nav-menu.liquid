  function watchDomChanges(callback) {
  const observer = new MutationObserver((mutationsList, observer) => {
    callback(mutationsList); // You handle what to do with the mutations
  });

  observer.observe(document.body, {
    childList: true,      // Detect added or removed elements
    // subtree: true,        // Watch entire DOM tree
    // attributes: true,     // Detect attribute changes
    // characterData: true   // Detect text/content changes
  });

  return observer; // return the observer in case you want to disconnect later
}
watchDomChanges((mutations) => {
  mutations.forEach(mutation => {
