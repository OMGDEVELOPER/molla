{% style %}
  .submenu__items,
  .submenu-subitems {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .submenu__items > li,
  .submenu-subitems > li {
    /* position: relative; */
  }

  .submenu-subitems,
  .style-2,
  .submenu-subitems-inner {
    /* display: none; */
    position: absolute;
    top: 0;
    left: 100%;
    background: white;
    padding: 1rem;
    min-width: 220px;
    z-index: 10;
  }

  .submenu__items > li:hover > .style-2,
  .style-2 .submenu__items > li:hover > .submenu-subitems {
    /* display: block; */
  }

  .submenu-subitems-inner {
    left: 100%;
    top: 0;
  }

  /* Add transition for smoothness */
  .style-2,
  .submenu-subitems,
  .submenu-subitems-inner {
    transition: opacity 0.2s ease, visibility 0.2s ease;
  }
  .uppercase{
    text-transform:uppercase;
  }
{% endstyle %}
<submenu>
  <div class="submenu submenu-container container {{ block.id }}" id="{{ block.id }}">
    <div class="row">
      <!-- Level 1 -->
      <div class="col-12 col-md-3 item item__1">
        <div class="item__1__group">
          <div class="submenu__heading">
            <h3>OUR PRODUCTS</h3>
          </div>
          <ul class="submenu__items">
            <li class="menu-l1" data-submenu-id="level2-{{ block.id }}">
              <a href="#">{{ block.settings.item-1-label }}</a>
            </li>
            <li><a href="#">{{ block.settings.item-2-label }}</a></li>
          </ul>
        </div>

        <!-- Icons -->
        <ul class="submenu__items links-with-icon">
          {% for i in (1..3) %}
            <li>
              <a href="#">
                <span class="__icon">
                  <img src="https://cdn.shopify.com/s/files/1/0859/1186/3592/files/sell.svg?v=1752660278" alt="icon">
                </span>
                <span class="__label">Special Offers</span>
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Level 2 -->
      <div class="col-12 col-md-3 item item__2 level-2 d-none" id="level2-{{ block.id }}">
        {% assign main_menu = linklists[block.settings.menu-item-1] %}
        <div class="item__1__group">
          <div class="submenu__heading heading__1">
            <h3 class="uppercase">{{ block.settings.menu-item-1 }}</h3>
          </div>
          <ul class="submenu__items">
            {% for top_link in main_menu.links %}
              <li class="has-second-level" data-level="3">
                <a href="{{ top_link.url }}">{{ top_link.title }}</a>

                {% if top_link.links != blank %}
                  <!-- Level 3 -->
                  <div class="submenu-items-container level-3 d-none">
                    <div class="submenu__heading">
                      <h3>{{ top_link.title }}</h3>
                    </div>
                    <ul class="submenu__items">
                      {% for child_link in top_link.links %}
                        <li class="has-third-level">
                          <a href="{{ child_link.url }}">{{ child_link.title }}</a>

                          {% if child_link.links != blank %}
                            <!-- Level 4 -->
                            <div class="submenu-subitems-inner level-4 d-none">
                              <div class="submenu__heading">
                                <h3>{{ child_link.title }}</h3>
                              </div>
                              <ul class="submenu__items">
                                {% for subchild_link in child_link.links %}
                                  <li><a href="{{ subchild_link.url }}">{{ subchild_link.title }}</a></li>
                                {% endfor %}
                              </ul>
                            </div>
                          {% endif %}
                        </li>
                      {% endfor %}
                    </ul>
                  </div>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</submenu>

<style>
  .d-none {
    display: none !important;
  }

  .submenu__items > li {
    position: relative;
  }

  .submenu-items-container,
  .submenu-subitems-inner {
    position: absolute;
    top: 0;
    left: 100%;
    background: #fff;
    z-index: 10;
    padding: 15px;
    border: 1px solid #eee;
    min-width: 250px;
  }

  .submenu__heading h3 {
    font-size: 16px;
    margin-bottom: 10px;
    text-transform: uppercase;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Show Level 2
    document.querySelectorAll('.menu-l1').forEach(item => {
      const submenuId = item.getAttribute('data-submenu-id');
      const submenu = document.getElementById(submenuId);
      let timer;

      item.addEventListener('mouseenter', () => {
        clearTimeout(timer);
        document.querySelectorAll('.level-2').forEach(el => el.classList.add('d-none'));
        submenu?.classList.remove('d-none');
      });

      item.addEventListener('mouseleave', () => {
        timer = setTimeout(() => {
          if (!submenu.matches(':hover')) submenu.classList.add('d-none');
        }, 300);
      });

      submenu?.addEventListener('mouseenter', () => clearTimeout(timer));
      submenu?.addEventListener('mouseleave', () => {
        timer = setTimeout(() => submenu.classList.add('d-none'), 300);
      });
    });

    // Show Level 3
    document.querySelectorAll('.has-second-level').forEach(item => {
      const submenu = item.querySelector('.submenu-items-container');
      let timer;

      item.addEventListener('mouseenter', () => {
        clearTimeout(timer);
        submenu?.classList.remove('d-none');
      });

      item.addEventListener('mouseleave', () => {
        timer = setTimeout(() => submenu?.classList.add('d-none'), 300);
      });

      submenu?.addEventListener('mouseenter', () => clearTimeout(timer));
      submenu?.addEventListener('mouseleave', () => {
        timer = setTimeout(() => submenu?.classList.add('d-none'), 300);
      });
    });

    // Show Level 4
    document.querySelectorAll('.has-third-level').forEach(item => {
      const submenu = item.querySelector('.submenu-subitems-inner');
      let timer;

      item.addEventListener('mouseenter', () => {
        clearTimeout(timer);
        submenu?.classList.remove('d-none');
      });

      item.addEventListener('mouseleave', () => {
        timer = setTimeout(() => submenu?.classList.add('d-none'), 300);
      });

      submenu?.addEventListener('mouseenter', () => clearTimeout(timer));
      submenu?.addEventListener('mouseleave', () => {
        timer = setTimeout(() => submenu?.classList.add('d-none'), 300);
      });
    });
  });
</script>



