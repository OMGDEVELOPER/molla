.submenu__items {
  list-style: none;
  padding: 0;
  margin: 0;
}

.submenu__items li a {
  display: block;
  padding: 5px 10px;
  color: #333;
  text-decoration: none;
}

.submenu__items li a:hover {
  background-color: #f5f5f5;
}

.see-all-link {
  font-size: 12px;
  text-transform: uppercase;
  color: #007bff;
  text-decoration: underline;
}

<submenu>
  <div class="submenu submenu-container container {{ block.id }}" id="{{ block.id }}">
    <div class="row">
      <!-- Main Category List -->
      <div class="col-12 col-md-3 item item__1">
        <div class="item__1__group">
          <div class="submenu__heading">
            <h3>OUR PRODUCTS</h3>
          </div>
          {% assign main_menu = linklists[block.settings.menu-item-1] %}
          <ul class="submenu__items">
            {% for top_link in main_menu.links %}
              <li>
                <a href="{{ top_link.url }}">{{ top_link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
        <ul class="submenu__items links-with-icon">
          <li>
            <a href="#"><span class="__icon"><img src="https://cdn.shopify.com/s/files/1/0859/1186/3592/files/sell.svg?v=1752660278" alt="icon" /></span><span class="__label">Special Offers</span></a>
          </li>
          <li>
            <a href="#"><span class="__icon"><img src="https://cdn.shopify.com/s/files/1/0859/1186/3592/files/sell.svg?v=1752660278" alt="icon" /></span><span class="__label">Special Offers</span></a>
          </li>
          <li>
            <a href="#"><span class="__icon"><img src="https://cdn.shopify.com/s/files/1/0859/1186/3592/files/sell.svg?v=1752660278" alt="icon" /></span><span class="__label">Special Offers</span></a>
          </li>
        </ul>
      </div>

      <!-- Dynamic Columns for Second-Level Items -->
      {% for top_link in main_menu.links %}
        {% if top_link.links.size > 0 %}
          <div class="col-12 col-md-3 item item__{{ forloop.index }} style-2">
            <div class="submenu__heading">
              <h3>{{ top_link.title }}</h3>
              <a href="{{ top_link.url }}"><span class="see-all-link">See All</span></a>
            </div>
            <ul class="submenu__items">
              {% for child_link in top_link.links %}
                <li>
                  <a href="{{ child_link.url }}">{{ child_link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</submenu>
<script>
  document.querySelectorAll('.submenu__items li').forEach(function (item) {
    item.addEventListener('mouseenter', function () {
      this.classList.add('active');
    });
    item.addEventListener('mouseleave', function () {
      this.classList.remove('active');
    });
  });
</script>
